<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity_privacy">

    <ImageView
        android:id="@+id/kali3"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:src="@drawable/kali" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEBIJAKAN PRIVASI WECHAT"
        android:layout_below="@id/kali3"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terakhir diperbarui : 2023-06-01"
        android:layout_below="@id/text4"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:src="@drawable/ringkasan"
        android:layout_below="@id/text5"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Saya telah membaca dan menerima ketentuan di atas"
        android:textColor="@color/perak"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox2"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Lanjutkan"
        android:backgroundTint="@color/greenlime"/>

</RelativeLayout>
